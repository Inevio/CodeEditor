
{

    "name"    : "Code Editor",
    "version" : "1.0",
    "stage"   : "beta",
    "api"     : "a100d2",

    "language" : {

        "default" : "en-en",
        "list"    : [ "en-en" ]

    },

    "device" : {

        "desktop" : {

            "primary" : "main",
            "service" : [],
            "common"  : {

                "css"    : [
                  "bower_components/codemirror/lib/codemirror.css",
                  "bower_components/codemirror/theme/monokai.css",
                  "bower_components/codemirror/addon/scroll/simplescrollbars.css",
                  "style.css"
                ],
                "script" : ["script.dev.js"],
                "start"  : []

            },

            "view" : {

                "main" : {

                    "description" : "",

                    "template" : "view/main.html",

                    "createAnimation" : false,
                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 1000,
                        "min"     : 1000,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 540,
                        "min"     : 500,
                        "max"     : 0

                    },

                    "css"    : [],
                    "script" : [],
                    "start"  : []

                },

                "list" : {

                    "description" : "",

                    "template" : "view/list.html",

                    "createAnimation" : false,
                    "maxizable" : true,
                    "resizable" : true,

                    "width"  : {

                        "default" : 500,
                        "min"     : 500,
                        "max"     : 0

                    },

                    "height" : {

                        "default" : 540,
                        "min"     : 500,
                        "max"     : 0

                    },

                    "css"    : [],
                    "script" : [],
                    "start"  : []
                  },

                "writeName" : {

                      "description" : "",

                      "template" : "view/writeName.html",

                      "createAnimation" : false,
                      "maxizable" : false,
                      "resizable" : false,

                      "width"  : {

                          "default" : 500,
                          "min"     : 500,
                          "max"     : 0

                      },

                      "height" : {

                          "default" : 380,
                          "min"     : 380,
                          "max"     : 0

                      },

                      "css"    : [],
                      "script" : [],
                      "start"  : []
                 }

            }

        }

    },

    "permission" : {

        "fs" : {

            "read" : true

        }

    }

}
